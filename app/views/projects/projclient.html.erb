<div class="header">
<center></center>
 <div class="container">
   
   <center><h1>Client Project List</h>
   <h2><%= link_to "Add New Project", '/projects/new' %>    <%=link_to"Project Page", '/projects' %>    <%= link_to "Main Menu", '/' %></h2></center>
 </div>
</div>

<div class="projectslist">
 <div class="container">
 
<% Project.all.order(client_id: :asc).group_by(&:client_id).each do |client, project| %>
<% clfind = Client.find(client) %>
  	  <h3>Client <% client %>: <%= clfind.name %><br></h3>
       <% project.each do |project| %>
         <li><%= project.project_name %><br></li>
       <% end %>
<% end %>
		
 </div>
</div>
