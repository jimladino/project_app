<div class="header">
<center></center>
 <div class="container">
   
   <center><h1>Programmer List</h>
   <h2><%= link_to "Add New Programmer", 'programmers/new' %>    <%= link_to "Main Menu", '/' %></h2></center>
 </div>
</div>

<div class="plist">
 <center><div class="container">

 <table border = 1>
 	<tr>
 		<td><h3>ID</h3></td>
 		<td><h3>Programmer Name</h3></td>
 		<td><h3>Action</h3></td>
 	</tr>
  <% @programmers.each do |f| %>
  	<tr>
		<td><%= f.id %></td>
		<td><%= f.name %></td>
		<td><%= link_to "Edit", edit_programmer_path(f) %>  <%= link_to "Delete", programmer_path(f), method: :delete, data: {confirm: "Are you sure?" } %></td>
	</tr>
  
<% end %>
		</center>
 </div>
</div>